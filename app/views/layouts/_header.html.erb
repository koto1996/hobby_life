<header style="shadow-sm bg-info">
  <nav class="navbar navbar-expand-lg navbar-light", style="background-color:#fd7e14">
  <div class="container">
    <a class="navbar-brand" href="/">HobbyLife</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Posts",admin_posts_path,class:"nav-link text-light"%>
          </li>
          <li class="nav-item">
            <%= link_to "Log out",destroy_admin_session_path,method: :delete,class:"nav-link text-light"%>
          </li>
        <% elsif customer_signed_in?%>
          <li class="nav-item active">
            <%= link_to "Mypage",user_path(id: current_customer.id),class:"nav-link text-light"%>
          </li>
          <li class="nav-item">
            <%= link_to "Post",posts_path,class:"nav-link text-light"%>
          </li>
          <li class="nav-item">
            <%= link_to "Group",groups_path,class:"nav-link text-light"%>
          </li>
          <li class="nav-item">
            <%=link_to "Log out",destroy_customer_session_path,method: :delete,class:"nav-link text-light"%>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Post",posts_path,class:"nav-link text-light"%>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up",new_customer_registration_path,class:"nav-link text-light"%>
          </li>
          <li class="nav-item">
            <%= link_to "Sign in",customer_session_path,class:"nav-link text-light"%>
          </li>
          <li class="nav-item">
            <%= link_to "Guest",customers_guest_sign_in_path,method: :post,class:"nav-link text-light"%>
          </li>
        <% end %>
      </ul>
      <div class="seach">
       <%= render 'searches/form' %>
     </div>
    </div>
  </div>
  </nav>
</header>