<header style="background-color:#e65c17">
  <div class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">HobbyLife</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to "Posts",admin_posts_path%>
          </li>
          <li class="nav-item">
            <%= link_to "Log out",destroy_admin_session_path,method: :delete%>
          </li>
        <% elsif customer_signed_in?%>
          <li class="nav-item">
            <%= link_to "Mypage",user_path(id: current_customer.id)%>
          </li>
          <li class="nav-item">
            <%= link_to "Post",posts_path%>
          </li>
          <li class="nav-item">
            <%= link_to "Group",groups_path%>
          </li>
          <li class="nav-item">
            <%=link_to "Log out",destroy_customer_session_path,method: :delete%>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Post",posts_path%>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up",new_customer_registration_path%>
          </li>
          <li class="nav-item">
            <%= link_to "Sign in",customer_session_path%>
          </li>
        <% end %>
      </ul>
      <form class="seach">
       <%= render 'searches/form' %>
      </form>
    </div>
  </div>
    </nav>
  </div>
</header>