<div class="container">
  <div class="row-10 offset-1">
    <h2>Group作成</h2>
      <%= form_with model:@group,url: groups_path,method: :post do |f| %>
        <table>
          <tr>
            <th><%= f.label "image"%></th>
            <td><%=f.file_field :image,accept:"image/*"%></td>
          </tr>
          <tr>
            <th><%= f.label "name"%></th>
            <td><%=f.text_field :name%></td>
          </tr>
          <tr>
            <th><%= f.label "introduction"%></th>
            <td><%=f.text_area :introduction,rows:'5'%></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "NEWGROUP",class:"btn btn-danger"%></td>
          </tr>
        </table>
      <% end %>
    </div>
</div>
