<div class="container">
  <div class="row-6 offset-1">
    <h2>NewGroup</h2>
    <%= form_with model:@group,url: groups_path,method: :post do |f| %>
    <table class="table table-borderless mb-3">
      <tr>
        <th><%= f.label "image"%></th>
        <td><%=f.file_field :image,accept:"image/*"%></td>
      </tr>
      <tr>
        <th><%= f.label "name"%></th>
        <td><%=f.text_field :name,placeholder:"Groupの名前を入力してください",size:"45"%></td>
      </tr>
      <tr>
        <th><%= f.label "introduction"%></th>
        <td><%=f.text_area :introduction,rows:'5',placeholder:"Groupの紹介文を入力してください",size:"45x5"%></td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "NEWGROUP",class:"btn btn-danger"%></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>
