<h1>GroupEdit</h1>
<%= form_with model:@group,url: group_path(@group),method: :patch do |f| %>
  <table>
    <tr>
      <th><%= f.label "image"%></th>
      <td><%=f.file_field :image,accept:"image/*"%></td>
    </tr>
    <tr>
      <th><%= f.label "name"%></th>
      <td><%=f.text_field :name%></td>
    </tr>
    <tr>
      <th><%= f.label "introduction"%></th>
      <td><%=f.text_area :introduction,rows:'5'%></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "Edit",class:"btn btn-danger"%></td>
    </tr>
  </table>
<% end %>

