<div class="container">
  <div class="row-10 offset-1">
    <h2>Show</h2>
  <table>
    <tr>
      <th>image</th>
      <td><%= image_tag@post.get_image(100,100)%></td>
    </tr>
    <tr>
      <th>title</th>
      <td><%= @post.title%></td>
    </tr>
    <tr>
      <th>body</th>
      <td><%= @post.body%></td>
    </tr>
    <tr>
      <th></th>
      <td><%= render 'customer/favorites/favorite',post: @post %></td>
    </tr>
  </table>
  <div>
    <p>コメント数:<%= @post.post_comments.count %></p>
    <% @post.post_comments.each do |comment| %>
      <p><%= image_tag comment.customer.get_profile_image(100,100)%></p>
      <p><%= comment.customer.name %></p>
      <p><%= comment.comment %></p>
      <% if comment.customer == current_customer %>
        <%= link_to '削除',post_post_comment_path(comment.post,comment),method: :delete %>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= form_with model:[@post,@post_comment] do |f| %>
      <%= f.text_area :comment,rows:'5',placeholder:'コメントをここに'%>
      <%= f.submit 'Send',class:'btn btn-danger' %>
    <% end %>
  </div>
  </div>
</div>