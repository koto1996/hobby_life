
<div class="card-list-container">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= image_tag@post.get_image(100,100), class:"card-img-top";%>
    <div class="card-body">
      <div class="row">
        <div class="col-3">
          <%= image_tag @post.customer.get_profile_image(50,50),class:"mt-3 rounded-circle;"%>
        </div>
        <div class="col-8">
          <p class="card-title">
            <i class="fas fa-pen"></i><%= @post.title%>
          </p>
          <p class="card-text"><%= @post.body%></p>
          <p>
            <%= link_to user_path(@post.customer_id) do %>
            <i class="fas fa-user"></i><%= @post.customer.name%>
            <% end %>
          </p>
          <p><%= render 'customer/favorites/favorite',post: @post %>
             <i class="fas fa-comment"></i>コメント数:<%= @post.post_comments.count %>
          </p>
        </div>
      </div>
    </div>
  </div>
      <div class="row-4 offset-3">
        <% @post.post_comments.each do |comment| %>
          <p><%= image_tag comment.customer.get_profile_image(100,100)%></p>
          <p><i class="fas fa-user"></i><%= comment.customer.name %></p>
          <p><%= comment.comment %></p>
          <% if comment.customer == current_customer %>
            <%= link_to '削除',post_post_comment_path(comment.post,comment),method: :delete %>
          <% end %>
        <% end %>
      </div>
      <div class="row4 offset-3">
        <%= form_with model:[@post,@post_comment] do |f| %>
          <%= f.text_area :comment,rows:'5',placeholder:'コメントをここに'%>
          <%= f.submit 'Send',class:'btn btn-danger' %>
        <% end %>
      </div>