<div class="container">
  <h2>Posts</h2>
  <div><%=link_to "NewPost",new_customer_post_path,class:'btn btn-danger'%></div>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>title</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |pos| %>
      <tr>
        <td><%=image_tag pos.get_image %></td>
        <td><%=pos.title%></td>
        <td><%=link_to "show",customer_post_path(pos)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>