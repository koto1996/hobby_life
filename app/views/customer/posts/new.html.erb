<h2>NewPost</h2>
  <%= form_with model:@post,url: customer_posts_path,method: :post do |f| %>
    <table>
      <tr>
        <th><%= f.label "image"%></th>
        <td><%=f.file_field :image,accept:"image/*"%></td>
      </tr>
      <tr>
        <th><%= f.label "title"%></th>
        <td><%=f.text_field :title%></td>
      </tr>
      <tr>
        <th><%= f.label "body"%></th>
        <td><%=f.text_field :body%></td>
      </tr>
      <tr>
        <th><%= f.label "hobby"%></th>
        <td><%=f.collection_select :hobby_id,Hobby.all, :id, :name%></td>
      </tr>
        <th></th>
        <td><%= f.submit "NEWPOST"%></td>
    </table>
  <% end %>


