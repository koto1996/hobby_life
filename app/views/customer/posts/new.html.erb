<div class="container">
  <div class="row-10 offset-1">
    <h2>NewPost</h2>
      <%= form_with model:@post,url: posts_path,method: :post do |f| %>
        <table>
          <tr>
            <th><%= f.label "image"%></th>
            <td><%=f.file_field :image,accept:"image/*"%></td>
          </tr>
          <tr>
            <th><%= f.label "title"%></th>
            <td><%=f.text_field :title%></td>
          </tr>
          <tr>
            <th><%= f.label "body"%></th>
            <td><%=f.text_field :body%></td>
          </tr>
          <tr>
            <th><%= f.label "hobby"%></th>
            <td><%=f.collection_select :hobby_id,current_customer.hobbies.all, :id, :name%></td>
          </tr>
            <th></th>
            <td><%= f.submit "NEWPOST",class:"btn btn-danger"%></td>
        </table>
      <% end %>
    </div>
</div>

