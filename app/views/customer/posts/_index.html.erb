<table>
  <thead>
    <tr>
      <th>image</th>
      <th>user</th>
      <th>title</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |pos| %>
    <tr>
      <td>
        <%=image_tag pos.get_image(100,100) %>
      </td>
      <td>
        <%=link_to user_path(pos.customer_id) do %>
        <%= pos.customer.name %>
        <% end %>
      </td>
      <td>
        <%=link_to post_path(pos.id) do %>
        <%=pos.title%>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>