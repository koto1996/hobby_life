<table>
  <thead>
    <tr>
      <th>image</th>
      <th>title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |pos| %>
    <tr>
      <td><%=image_tag pos.get_image(100,100) %></td>
      <td><%=pos.title%></td>
      <td><%=link_to "show",post_path(pos)%></td>
    </tr>
    <% end %>
  </tbody>
</table>