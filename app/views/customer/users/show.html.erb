<div class="container">
  <div class="row">
    <div class="col-3">
      <h1>User</h1>
        <table>
          <tr>
            <td><%= image_tag @customer.get_profile_image(100,100)%></td>
          </tr>
          <tr>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <td><%= link_to @customer.followings.count,user_followings_path(@customer)%></td>
          </tr>
          <tr>
            <td><%= link_to @customer.followers.count,user_followers_path(@customer)%></td>
          </tr>
          <% if @customer == current_customer %>
          <tr>
            <td><%= link_to "edit",edit_user_path,class:'btn btn-danger'%></td>
          </tr>
          <tr>
            <td><%= link_to 'Like',user_likes_path,class:'btn btn-danger'%></td>
          </tr>
          <% end %>
          <tr>
            <td><%= render 'customer/relationships/follobtn',customer:@customer %></td>
          </tr>
        </table>
      <h2>Hobby一覧</h2>
        <%= render 'customer/hobbies/hobby',hobbies: @hobbies %>
      </div>
    <div class="col-7 mx-auto">
      <div><%=link_to "New Post",new_post_path,class:'m-3'%>|<%=link_to "New Hobby",hobbies_path,class:'m-3'%>|<%=link_to "New Group",new_group_path,class:'m-3'%></div>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>title</th>
            <th colspan='4'></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |pos| %>
          <tr>
            <td><%=image_tag pos.get_image(100,100)%></td>
            <td><%=pos.title%></td>
            <td><%=link_to "show",post_path(pos)%></td>
            <% if pos.customer_id == current_customer %>
            <td><%=link_to "destroy",post_path(pos),method: :delete%></td>
            <% end %>
            <td><%=pos.post_comments.count%>コメント</td>
            <td id="favorite_buttons_<%= pos.id%>">
              <%= render "customer/favorites/favorite",post: pos %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>