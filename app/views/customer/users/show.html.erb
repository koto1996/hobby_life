<h1>User</h1>
  <table>
    <tr>
    <td><%= image_tag @customer.get_profile_image(100,100)%></td>
    </tr>
    <tr>
    <td><%= @customer.name %></td>
    </tr>
    <tr>
      <td><%= link_to "edit",user_mypage_edit_path,class:'btn btn-danger'%></td>
    </tr>
  </table>
  <h3>Hobby一覧</h3>
    <% @hobbies.each do |hobby| %>
    <%= hobby.name %>
    <%= link_to "edit",edit_customer_hobby_path(hobby)%>
    <% end %>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>title</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |pos| %>
      <tr>
        <td><%=image_tag pos.get_image%></td>
        <td><%=pos.title%></td>
        <td><%=link_to "show",customer_post_path(pos)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>

