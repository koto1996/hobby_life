<div class="container">
  <div class="row">
    <div class="col-3">
      <h1>User</h1>
        <table>
          <tr>
          <td><%= image_tag @customer.get_profile_image(100,100)%></td>
          </tr>
          <tr>
          <td><%= @customer.name %></td>
          </tr>
          <tr>
            <td><%= link_to "edit",user_mypage_edit_path,class:'btn btn-danger'%></td>
          </tr>
        </table>
          <h2>Hobby一覧</h2>
          <%= render 'customer/hobbies/hobby',hobbies: @hobbies %>
    </div>
    <div class="col-7 mx-auto">
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>title</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |pos| %>
          <tr>
            <td><%=image_tag pos.get_image(100,100)%></td>
            <td><%=pos.title%></td>
            <td><%=link_to "show",post_path(pos)%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>