<div class="container">
  <div class="row-10 offset-1">
    <div class="card  mx-auto">
      <div class="card-header">
        <h1 class="text-center">UserEdit</h1>
      </div>
      <div class="card-body">
        <table class="mx-auto">
        <%= form_with model:@customer,url: user_path(@customer),method: :patch do |f| %>
          <%= render "layouts/form_error_messages", model: @customer %>
          <tr>
            <th>image</th>
            <td><%= f.file_field :profile_image,accept:"image/*"%></td>
          </tr>
          <tr>
            <th>name</th>
            <td><%= f.text_field :name,size:"30" %></td>
          </tr>
          <tr>
            <th></th>
            <td class="text-center"><%= f.submit 'Update',class:'btn btn-danger' %></td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>
</div>