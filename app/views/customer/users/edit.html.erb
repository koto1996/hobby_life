<div class="container">
  <div class="row-10 offset-1">
    <div class="card  mx-auto">
      <h1 class="text-center">UserEdit</h1>
        <table class="mx-auto">
          <%= form_with model:@customer,url: user_mypage_path do |f| %>
          <tr>
            <th>image</th>
            <td><%= f.file_field :profile_image,accept:"image/*"%></td>
          </tr>
          <tr>
            <th>name</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit 'Update',class:'btn btn-danger' %></td>
          </tr>
          <% end %>
        </table>
    </div>
   </div>
</div>