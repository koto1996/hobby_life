<div class="container">
  <div class="row-10 offset-1">
    <div class="card text-center mx-auto">
      <h2>Sign up</h2>
        <%= form_with model: @customer,url: customer_registration_path do |f| %>
          <%= render "layouts/form_error_messages", model: @customer %>
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :birthday %><br />
            <%= f.date_select :birthday,customer_month_numbers: true,start_year: 1950,end_year: (Time.now.year - 18),default: Date.new(2000, 1, 1) %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
      <%= render "customer/shared/links" %>
    </div>
  </div>
</div>