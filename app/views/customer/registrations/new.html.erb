<div class="container">
  <div class="row">
    <div class="card text-center mx-auto", style="background-color:#fd7e14">
      <div class="card-header text-center ">
        <h2>Sign up</h2>
      </div>
        <%= form_with model: @customer,url: customer_registration_path do |f| %>
          <%= render "layouts/form_error_messages", model: @customer %>
          <table>
            <tr>
              <th><%= f.label :name %></th>
              <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
            </tr>
            <tr>
              <th><%= f.label :email %></th>
              <td><%= f.email_field :email, autocomplete: "email" %></td>
            </tr>
            <tr>
              <th><%= f.label :birthday %></th>
              <td><%= f.date_select :birthday,customer_month_numbers: true,start_year: 1950,end_year: (Time.now.year - 18),default: Date.new(2000, 1, 1)%></td>
            </tr>
            <tr>
              <th><%= f.label :password %>
              <% if @minimum_password_length %>
                (<%= @minimum_password_length %> 文字以上)
              <% end %>
              </th>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <th><%= f.label :password_confirmation %></th>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <th></th>
              <td><%= f.submit "Sign up",class:"btn my-1 mx-2 btn-info btn-sm" %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  <div class="row text-center">
    <div class="col p-5">
      <h5>ログインしている方は</h5>
      <p><%= link_to "こちら",new_customer_session_path %>からログインを行ってください。</p>
      <p><%= link_to "管理者",new_admin_session_path %></p>
    </div>
  </div>
</div>