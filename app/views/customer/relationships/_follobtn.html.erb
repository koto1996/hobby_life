<% if current_customer != customer %>
  <% if current_customer.following?(customer)%>
    <%= link_to 'フォロー外す',user_relationships_path(customer),method: :delete,class:'btn btn-secondary ml-3' %>
  <% else %>
    <%= link_to 'フォローする',user_relationships_path(customer),method: :post,class:'btn btn-info ml-3' %>
  <% end %>
<% end %>