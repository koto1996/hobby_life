<% if current_customer != customer %>
  <% if current_customer.following?(customer)%>
    <%= link_to 'フォロー外す',user_relationships_path(customer),method: :delete,class:'btn btn-danger' %>
  <% else %>
    <%= link_to 'フォローする',user_relationships_path(customer),method: :post,class:'btn btn-danger' %>
  <% end %>
<% end %>