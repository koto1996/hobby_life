<% if current_customer != customer %>
  <% if current_customer.following?(customer.id)%>
    <%= link_to 'フォロー外す',user_relationship_path(user_id: customer.id),method: :delete %>
  <% else %>
    <%= link_to 'フォローする',user_relationship_path(user_id: customer.id),method: :post %>
  <% end %>
<% end %>
